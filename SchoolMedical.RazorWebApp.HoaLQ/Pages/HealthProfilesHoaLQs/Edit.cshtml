@page "{id:int?}"
@model SchoolMedical.RazorWebApp.HoaLQ.Pages.HealthProfilesHoaLQs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Health Profile</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Health Profile Details</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="HealthProfilesHoaLq.HealthProfileHoaLqid" />

            <div class="mb-3">
                <strong>@Html.DisplayNameFor(model => model.HealthProfilesHoaLq.Student):</strong>
                <span class="ms-2">@Html.DisplayFor(model => model.HealthProfilesHoaLq.Student.StudentFullName)</span>
            </div>
            <input type="hidden" asp-for="HealthProfilesHoaLq.StudentId" />

            <!-- Row: Weight + Height -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.Weight" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.Weight" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.Weight" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.Height" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.Height" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.Height" class="text-danger"></span>
                </div>
            </div>

            <!-- Row: Sight + Hearing -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.Sight" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.Sight" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.Sight" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.Hearing" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.Hearing" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.Hearing" class="text-danger"></span>
                </div>
            </div>

            <!-- Row: Blood Pressure + Blood Type -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.BloodPressure" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.BloodPressure" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.BloodPressure" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.BloodType" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.BloodType" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.BloodType" class="text-danger"></span>
                </div>
            </div>

            <!-- Row: Sex + DateOfBirth -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.Sex" class="form-label"></label>
                    <select asp-for="HealthProfilesHoaLq.Sex" class="form-select">
                        <option value="">-- Chọn Giới Tính --</option>
                        <option value="true">Nam</option>
                        <option value="false">Nữ</option>
                    </select>
                    <span asp-validation-for="HealthProfilesHoaLq.Sex" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HealthProfilesHoaLq.DateOfBirth" class="form-label"></label>
                    <input asp-for="HealthProfilesHoaLq.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="HealthProfilesHoaLq.DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <!-- Field: Allergy -->
            <div class="mb-3">
                <label asp-for="HealthProfilesHoaLq.Allergy" class="form-label"></label>
                <input asp-for="HealthProfilesHoaLq.Allergy" class="form-control" />
                <span asp-validation-for="HealthProfilesHoaLq.Allergy" class="text-danger"></span>
            </div>

            <!-- Field: ChronicDisease -->
            <div class="mb-3">
                <label asp-for="HealthProfilesHoaLq.ChronicDisease" class="form-label"></label>
                <input asp-for="HealthProfilesHoaLq.ChronicDisease" class="form-control" />
                <span asp-validation-for="HealthProfilesHoaLq.ChronicDisease" class="text-danger"></span>
            </div>

            <!-- Field: MedicalHistory -->
            <div class="mb-3">
                <label asp-for="HealthProfilesHoaLq.MedicalHistory" class="form-label"></label>
                <input asp-for="HealthProfilesHoaLq.MedicalHistory" class="form-control" />
                <span asp-validation-for="HealthProfilesHoaLq.MedicalHistory" class="text-danger"></span>
            </div>

            <!-- Field: CurrentMedical -->
            <div class="mb-3">
                <label asp-for="HealthProfilesHoaLq.CurrentMedical" class="form-label"></label>
                <input asp-for="HealthProfilesHoaLq.CurrentMedical" class="form-control" />
                <span asp-validation-for="HealthProfilesHoaLq.CurrentMedical" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="mt-4">
                <button type="submit" class="btn btn-success">Save</button>
                <input type="button" id="btnHubUpdate" class="btn btn-primary" value="Update by SignalR"/>
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/signalr/signalr.js"></script>
<script>
    "use strict";

    var connection = new signalR.HubConnectionBuilder().withUrl("/SchoolMedicalHub").build();

    connection.start().then(function () {
        console.log("Connected to the SignalR Hub");
    }).catch(function (err) {
        return console.error(err.toString());
    });

    document.getElementById("btnHubUpdate").addEventListener("click", function (event) {
        
   var dataObj = JSON.stringify({
       HealthProfileHoaLqid: document.getElementById("HealthProfilesHoaLq_HealthProfileHoaLqid").value,
       Weight: document.getElementById("HealthProfilesHoaLq_Weight").value,
       Height: document.getElementById("HealthProfilesHoaLq_Height").value,
       Sight: document.getElementById("HealthProfilesHoaLq_Sight").value,
       Hearing: document.getElementById("HealthProfilesHoaLq_Hearing").value,
       BloodPressure: document.getElementById("HealthProfilesHoaLq_BloodPressure").value,
       BloodType: document.getElementById("HealthProfilesHoaLq_BloodType").value,
       Sex: document.getElementById("HealthProfilesHoaLq_Sex").value,
       DateOfBirth: document.getElementById("HealthProfilesHoaLq_DateOfBirth").value,
       Allergy: document.getElementById("HealthProfilesHoaLq_Allergy").value,
       ChronicDisease: document.getElementById("HealthProfilesHoaLq_ChronicDisease").value,
       MedicalHistory: document.getElementById("HealthProfilesHoaLq_MedicalHistory").value,
       CurrentMedical: document.getElementById("HealthProfilesHoaLq_CurrentMedical").value,
       StudentId: document.getElementById("HealthProfilesHoaLq_StudentId").value,

   })
        console.log(dataObj);
   connection.invoke("HubUpdate_HealthProfile", dataObj).then(function (){
       window.location.href = "/HealthProfilesHoaLQs/Index";
   }).catch(function (err) {
       return console.error(err.toString());
   });
   event.preventDefault()
    });
</script>

